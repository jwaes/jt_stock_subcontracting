        <xpath expr="//div[@name='div_incoming_address']" position="inside">
            <div t-if="o.picking_type_id.destination_location_partner_id">
                <span><strong>Remote Address:</strong></span>
                <div t-field="o.picking_type_id.destination_location_partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            </div>
            <div t-if="o.destination_location_partner_id">
                <span><strong>Remote Warehouse Address:</strong></span>
                <div t-field="o.destination_location_partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            </div>             
        </xpath>
